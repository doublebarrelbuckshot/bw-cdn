{
  "name": "boilerplate-base",
  "version": "0.0.2",
  "description": "Minimalist Boilerplate to kickstart a project with all tools already setup.",
  "main": "app.js",
  "scripts": {
    "/1/": "[start] generate code documentation [start]",
    "pregenerate-doc": "rimraf ./_tmp/docs",
    "generate-doc": "jsdoc -c conf.jsdoc.json",
    "postgenerate-doc": "opn ./_tmp/docs/index.html",
    "/2/": "[start] linter [start]",
    "lint": "./node_modules/.bin/standard",
    "lint:fix": "./node_modules/.bin/standard --fix",
    "/3/": "[start] tests [start]",
    "test": "cross-env NODE_ENV=test jest --coverage --config=.jestrc.json",
    "posttest": "opn ./_tmp/coverage/lcov-report/index.html",
    "/4/": "[start] start dev or prod server [start]",
    "dev": "DEBUG=app:* node_modules/.bin/pm2 start ecosystem.config.js --env development",
    "start": "node bin/www.js",
    "local": "GOOGLE_APPLICATION_CREDENTIALS=/home/wally/code/bw-cdn/auth/BW-CDN-f5edf4a699b7.json node bin/www.js",
    "/5/": "[start] check security vulnerability [start]",
    "check-nsp": "./node_modules/.bin/nsp check",
    "check-snyk": "./node_modules/.bin/snyk test",
    "check-snyk-wizard": "./node_modules/.bin/snyk wizard"
  },
  "keywords": [
    "node",
    "expressjs",
    "jsdoc",
    "standardjs",
    "jest",
    "editorconfig",
    "js",
    "javascript",
    "docker",
    "microservice",
    "boilerplate"
  ],
  "dependencies": {
    "@google-cloud/datastore": "~1.1.0",
    "@google-cloud/storage": "~1.2.1",
    "bluebird": "^3.5.1",
    "body-parser": "^1.17.2",
    "boom": "^5.2.0",
    "compression": "^1.7.0",
    "cors": "^2.8.4",
    "csv-parse": "^2.0.0",
    "debug": "^2.6.8",
    "express": "^4.15.3",
    "express-fileupload": "^0.2.0",
    "express-winston": "^2.4.0",
    "expressjs-routes-loader": "0.0.3",
    "faker": "^4.1.0",
    "helmet": "^3.8.1",
    "joi": "^10.6.0",
    "joi4express": "^1.0.2",
    "lodash": "^4.17.4",
    "lout4express": "^1.2.1",
    "md5": "^2.2.1",
    "moment": "^2.19.1",
    "multer": "~1.3.0",
    "nconf": "^0.8.4",
    "npm-run-all": "^4.0.2",
    "path": "^0.12.7",
    "pm2": "^2.6.1",
    "prompt": "~1.0.0",
    "uglify-js": "3.0.27",
    "uuid": "^3.1.0",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "cross-env": "^3.1.4",
    "jest": "^20.0.4",
    "jsdoc": "^3.4.3",
    "minami": "^1.2.3",
    "nodemon": "^1.11.0",
    "opn": "^4.0.2",
    "opn-cli": "^3.1.0",
    "standard": "^10.0.2",
    "supertest": "^3.0.0",
    "@google-cloud/nodejs-repo-tools": "1.4.16",
    "ava": "~0.21.0",
    "proxyquire": "~1.8.0",
    "sinon": "~3.0.0",
    "tap-dot": "~1.0.5"
  },
  "standard": {
    "globals": [],
    "ignore": [
      "node_modules",
      "_temp"
    ],
    "envs": [
      "node",
      "jest"
    ]
  },
  "jest": {
    "bail": false,
    "verbose": true,
    "collectCoverage": true,
    "coverageDirectory": "_tmp/coverage/",
    "collectCoverageFrom": [
      "(src|utils)/**/*.{js}",
      "app.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    }
  },
  "author": "arnaud raulet",
  "license": "ISC"
}
